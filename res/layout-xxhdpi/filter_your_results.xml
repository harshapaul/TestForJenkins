<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/svFilters"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Blue" 
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/forty_pixel_xxhdpi"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tvFilterBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/fourty_one_pixel"
                android:drawableLeft="@drawable/whitefiltericon"
                android:drawablePadding="@dimen/twelve_px"
                android:text="@string/filter_your_results"
                android:textColor="@color/White"
                android:layout_centerVertical="true"
                android:textSize="@dimen/nine_pt" />

            <Button
                android:id="@+id/btDone"
                android:layout_width="@dimen/two_three_seven_pixel"
                android:layout_height="@dimen/ninety_nine_pixel"
                android:layout_marginRight="@dimen/fourty_one_pixel"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/buttondone"
                android:gravity="center" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llLoanTypeHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_fivfty_two_pixel"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_LoanType_Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fourty_one_pixel"
                android:layout_weight="1"
                android:text="@string/loan_type"
                android:textColor="@color/White"
                android:textSize="@dimen/nine_pt" />

            <TextView
                android:id="@+id/tvLoanTypeSelectedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/White"
                android:textSize="@dimen/seven_pt" />

            <ImageView
                android:id="@+id/ivLoanTypeImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/twentyone_pixel"
                android:layout_marginRight="@dimen/fourty_one_pixel"
                android:src="@drawable/whitearrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llLoanTypeChild"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/eighty_seven_pixel"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cbLoanType30"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/thirty_year_fixed"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cbLoanType15"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/fifteen_year_fixed"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cbLoanType5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/five_by_one_arm"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSortByHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_sixty_nine_pixel"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_SortBy_Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fourty_one_pixel"
                android:layout_weight="1"
                android:text="@string/sort_by"
                android:textColor="@color/White"
                android:textSize="@dimen/nine_pt" />

            <TextView
                android:id="@+id/tvSortBySelectedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/White"
                android:textSize="@dimen/seven_pt" />

            <ImageView
                android:id="@+id/ivSortByImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/twentyone_pixel"
                android:layout_marginRight="@dimen/fourty_one_pixel"
                android:src="@drawable/whitearrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llSortByChild"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/eighty_seven_pixel"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbRelevance"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:layout_marginRight="@dimen/fourty_one_pixel"
                    android:button="@drawable/radiobutton"
                    android:checked="true"
                    android:text="@string/relevance"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbRate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:layout_marginRight="@dimen/fourty_one_pixel"
                    android:button="@drawable/radiobutton"
                    android:text="@string/rate"
                    android:textColor="@color/White"
                    android:checked="false"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbApr"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:layout_marginRight="@dimen/fourty_one_pixel"
                    android:button="@drawable/radiobutton"
                    android:text="@string/apr"
                    android:textColor="@color/White"
                    android:checked="false"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbRatings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:layout_marginRight="@dimen/fourty_one_pixel"
                    android:button="@drawable/radiobutton"
                    android:text="@string/ratings"
                    android:checked="false"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbPoints"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:layout_marginRight="@dimen/fourty_one_pixel"
                    android:button="@drawable/radiobutton"
                    android:text="@string/points"
                    android:checked="false"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/rbLender"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:layout_marginRight="@dimen/fourty_one_pixel"
                    android:button="@drawable/radiobutton"
                    android:text="@string/lender"
                    android:textColor="@color/White"
                    android:checked="false"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPointsHeader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/one_sixty_nine_pixel"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_Points_Header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/fourty_one_pixel"
                android:layout_weight="1"
                android:text="@string/points"
                android:textColor="@color/White"
                android:textSize="@dimen/nine_pt" />

            <TextView
                android:id="@+id/tvPointsSelectedValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text=""
                android:textColor="@color/White"
                android:textSize="@dimen/seven_pt" />

            <ImageView
                android:id="@+id/ivPointsImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:contentDescription="@string/empty"
                android:layout_marginLeft="@dimen/twentyone_pixel"
                android:layout_marginRight="@dimen/fourty_one_pixel"
                android:src="@drawable/whitearrow" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llPointsChild"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
           android:layout_marginTop="@dimen/eighty_seven_pixel"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cbPoint0"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/zero"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cbPoint1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/one"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/cbPoint2"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fourty_one_pixel"
                    android:button="@drawable/checkbox"
                    android:checked="true"
                    android:text="@string/two"
                    android:textColor="@color/White"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>