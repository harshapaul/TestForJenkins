<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is used in Fragment -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llproperty"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Dark_Grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/twevel_thousand_eighty_pixel"
        android:layout_marginLeft="@dimen/forty_pixel_xxhdpi"
        android:layout_marginRight="@dimen/forty_pixel_xxhdpi"
        android:background="@color/Light_Grey"
        android:baselineAligned="false"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_LoanTerm_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forty_seven_pixel_xxhdpi"
            android:text="@string/loan_term"
            android:textSize="@dimen/nine_pt"
            android:textColor="@color/White" />
        
        <Spinner
            android:id="@+id/spLoanTerm"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/one_fifty_eight_pixel_xxhdpi"
            android:layout_marginLeft="@dimen/forty_seven_pixel_xxhdpi"
            android:layout_marginRight="@dimen/forty_seven_pixel_xxhdpi"
            android:background="@color/White"
            android:gravity="left|center"
            android:padding="@dimen/five_dp"
            android:spinnerMode="dialog"
            android:prompt="@string/select_loan"
            android:text="@string/thirty_year_fixed"
            android:textSize="@dimen/page_sagment_header" />

        <TextView
            android:id="@+id/tv_ZipMortgage_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/forty_seven_pixel_xxhdpi"
            android:layout_marginTop="@dimen/forty_seven_pixel_xxhdpi"
            android:textSize="@dimen/nine_pt"
            android:text="@string/zip_code"
            android:textColor="@color/White" />

        <EditText
            android:id="@+id/etZipMortgage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_fifty_eight_pixel_xxhdpi"
            android:layout_marginLeft="@dimen/forty_seven_pixel_xxhdpi"
            android:layout_marginRight="@dimen/forty_seven_pixel_xxhdpi"
            android:background="@color/White"
            android:hint="@string/enter_zip"
           
            android:inputType="number"
            android:textSize="@dimen/page_sagment_header"
            android:maxLength="@integer/num_five"
            android:padding="@dimen/list_padding" />

        <Button
            android:id="@+id/btContinue_Property_Zip_Loan_Term"
            android:layout_width="@dimen/four_seventy_nine_px"
            android:layout_height="@dimen/one_fourty_two_pixel"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/forty_seven_pixel_xxhdpi"
            android:background="@drawable/buttoncontinue"
            android:gravity="left|center_vertical"
            android:padding="@dimen/five_dp"
            android:textColor="@color/White" />
    </LinearLayout>

</LinearLayout>