<?xml version="1.0" encoding="utf-8"?>
<!-- This layout is used in HowsYourCredit Fragment -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Dark_Grey"
    android:id="@+id/llZipCode"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/eight_seventy_pixel"
        android:layout_marginLeft="@dimen/twentysix_pixel"
        android:layout_marginRight="@dimen/twentysix_pixel"
        android:background="@color/Light_Grey"
        android:gravity="center_vertical"
        android:orientation="vertical" >
        
        <TextView 
            android:id="@+id/tvZipHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/thirty_one_pixel"
            android:textColor="@color/White"
            android:textSize="@dimen/nine_pt"
            android:text="@string/zip_code"
            />

        <EditText
            android:id="@+id/etZip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/one_zero_five_pixel"
            android:layout_marginLeft="@dimen/thirty_one_pixel"
        	android:layout_marginRight="@dimen/thirty_one_pixel"
            android:inputType="number"
            android:maxLength="@integer/num_five"
            android:background="@color/White"
            android:padding="5dp"
            android:textSize="@dimen/page_sagment_header"
            android:hint="@string/enter_zip" />

        <Button
            android:id="@+id/btGetOffers"
            android:layout_width="@dimen/three_nineteen_pixel"
            android:layout_height="@dimen/ninety_four_pixel"
            android:layout_gravity="center"
            android:gravity="left|center_vertical"
            android:layout_marginTop="@dimen/forty_pixel_xxhdpi"
            android:background="@drawable/buttongetoffers"
            android:textColor="@color/White" />

    </LinearLayout>

</LinearLayout>