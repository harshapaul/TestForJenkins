<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rloffer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Dark_Grey"
    android:paddingBottom="@dimen/five_pixel" >

    <Button
        android:id="@+id/tvOffer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_three_pixel"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/five_pixel"
        android:background="@color/Dark_Grey"
        android:drawableLeft="@drawable/your_offer"
        android:drawablePadding="@dimen/five_pixel"
        android:paddingLeft="@dimen/twelve_px"
        android:text="@string/your_loan_offers"
        android:textColor="@android:color/white"
        android:textSize="@dimen/fourteen_pixel" />

    <Button
        android:id="@+id/btnFilters"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/twenty_three_pixel"
        android:layout_alignBottom="@+id/tvOffer"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/five_pixel"
        android:background="@color/Dark_Grey"
        android:drawableLeft="@drawable/filter"
        android:drawablePadding="@dimen/five_pixel"
        android:text="@string/filters"
        android:textColor="@android:color/white"
        android:textSize="@dimen/thirteen_pixel" />

</RelativeLayout>