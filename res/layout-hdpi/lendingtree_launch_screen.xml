<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="700px"
        android:background="@drawable/dashboard"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mortagebtn"
            android:layout_width="@dimen/one_sixty_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/one_ten_pixel"
            android:layout_marginTop="@dimen/one_seventy_six_pixel"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="@string/mortgage_payment_calculator"
            android:textColor="@color/black"
            android:textSize="@dimen/twentysix_pixel" />

        <TextView
            android:id="@+id/homeAffBtn"
            android:layout_width="@dimen/one_sixty_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/one_ten_pixel"
            android:layout_marginTop="@dimen/forty_eight_pixel_mdpi"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="@string/home_affordability_calculator"
            android:textColor="@color/black"
            android:textSize="@dimen/twentysix_pixel" />

        <TextView
            android:id="@+id/loanExpBtn"
            android:layout_width="@dimen/one_sixty_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/one_ten_pixel"
            android:layout_marginTop="@dimen/forty_seven_pixel_xxhdpi"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="@string/instant_mortgage_quotes"
            android:textColor="@color/black"
            android:textSize="@dimen/twentysix_pixel" />

        <TextView
            android:id="@+id/mortgagenegBtn"
            android:layout_width="@dimen/one_sixty_dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/one_ten_pixel"
            android:layout_marginTop="@dimen/forty_seven_pixel_xxhdpi"
            android:background="@android:color/transparent"
            android:gravity="left"
            android:text="@string/compare_your_current_offer"
            android:textColor="@color/black"
            android:textSize="@dimen/twentysix_pixel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85px"
        android:background="@color/Dark_Grey"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/imgHome"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:contentDescription="@string/empty"
            android:paddingLeft="@dimen/twelve_px"
            android:paddingRight="@dimen/twelve_px"
            android:paddingBottom="@dimen/twenty_five_pixel"
            android:src="@drawable/home_icon" />

        <TextView
            android:id="@+id/tvHomeFooter"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:text="@string/footer_text"
            android:textColor="@color/silver"
            android:textSize="@dimen/four_point_five_pt" />
    </LinearLayout>

</LinearLayout>
