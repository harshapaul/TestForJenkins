<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llGoodFaithEstimate"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Dark_Grey"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/fragment_background"
        android:layout_marginLeft="@dimen/seventeen_pixel"
        android:layout_marginRight="@dimen/seventeen_pixel"
        android:background="@color/Light_Grey"
        android:baselineAligned="false"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_InitialLoanAmount_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:layout_marginTop="@dimen/ten_pixel"
            android:text="@string/initial_loan_amount"
            android:textColor="@color/White"
            android:textSize="@dimen/nine_pt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/three_thirty_pixel"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_InitialLoanAmount_dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/dollar"
                    android:textSize="@dimen/page_sagment_header" />

                <EditText
                    android:id="@+id/etInitialLoanAmount"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/seventy_pixel"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="@string/zero"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivInitialLoanAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_four_pixel"
                android:contentDescription="@string/empty"
                android:src="@drawable/help" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_InterestRate_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:layout_marginTop="@dimen/seventeen_pixel"
            android:text="@string/interest_rate"
            android:textColor="@color/White"
            android:textSize="@dimen/nine_pt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/three_thirty_pixel"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/etInterestRate"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/seventy_pixel"
                    android:background="@android:color/transparent"
                    android:imeOptions="actionDone"
                    android:inputType="numberDecimal"
                    android:paddingLeft="@dimen/five_dp"
                    android:paddingTop="@dimen/five_dp"
                    android:paddingBottom="@dimen/five_dp"
                    android:singleLine="true"
                    android:text="@string/default_rate"
                    android:textSize="@dimen/page_sagment_header" />

                <TextView
                    android:id="@+id/tvPercInterestRate"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@color/White"
                    android:gravity="center_vertical"
                    android:text="@string/home_affordability_percentage"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/eight_point_five_pt" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivInterestRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_four_pixel"
                android:contentDescription="@string/empty"
                android:src="@drawable/help" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_MonthlyPayment_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:layout_marginTop="@dimen/seventeen_pixel"
            android:text="@string/monthly_payment"
            android:textColor="@color/White"
            android:textSize="@dimen/nine_pt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/three_thirty_pixel"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_MonthlyPayment_dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/dollar"
                    android:textSize="@dimen/page_sagment_header" />

                <EditText
                    android:id="@+id/etMonthlyPayment"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/seventy_pixel"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="@string/zero"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivMonthlyPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_four_pixel"
                android:contentDescription="@string/empty"
                android:src="@drawable/help" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_OriginationCharges_Header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:layout_marginTop="@dimen/seventeen_pixel"
            android:text="@string/origination_charges_text"
            android:textColor="@color/White"
            android:textSize="@dimen/nine_pt" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/twentyone_pixel"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="@dimen/three_thirty_pixel"
                android:layout_height="wrap_content"
                android:background="@color/White"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/tv_OriginationCharges_dollar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/dollar"
                    android:textSize="@dimen/page_sagment_header" />

                <EditText
                    android:id="@+id/etOriginationCharges"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/seventy_pixel"
                    android:background="@android:color/transparent"
                    android:digits="0123456789"
                    android:imeOptions="actionDone"
                    android:inputType="number"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp"
                    android:singleLine="true"
                    android:text="@string/zero"
                    android:textSize="@dimen/page_sagment_header" />
            </LinearLayout>

            <ImageView
                android:id="@+id/ivOriginationCharges"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/thirty_four_pixel"
                android:contentDescription="@string/empty"
                android:src="@drawable/help" />
        </LinearLayout>

        <Button
            android:id="@+id/btGetOffers_Good_Faith"
            android:layout_width="@dimen/three_hundred_ninety_three_px"
            android:layout_height="@dimen/sixty_three_px"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/twentyone_pixel"
            android:layout_marginTop="@dimen/twentyone_pixel"
            android:background="@drawable/compare_offer"
            android:textColor="@color/White" />
    </LinearLayout>

</LinearLayout>