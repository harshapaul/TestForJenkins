<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Dark_Grey" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/twenty_eight_pixel"
        android:background="@color/White"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="@integer/num_two" >

            <Button
                android:id="@+id/btnCall_reviewParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/one_pixel"
                android:layout_weight="@integer/num_cols"
                android:background="@drawable/callloanexp_details" />

            <Button
                android:id="@+id/btnMail_reviewParent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/one_pixel"
                android:layout_weight="@integer/num_cols"
                android:background="@drawable/mailexp_details" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/thirteen_dp"
                android:layout_marginTop="@dimen/twenty_two_pixel"
                android:background="@drawable/greenloanexpbox" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/eighteen_pixel"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tvheaderRatingUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fivfteen_pixel"
                    android:singleLine="true"
                    android:text="@string/loan_exploree_review_patriot_financial"
                    android:textColor="@color/Text_Black"
                    android:textSize="@dimen/sixteen_sp" />

                <TextView
                    android:id="@+id/tvNLMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/fivfteen_pixel"
                    android:singleLine="true"
                    android:text="NLMS12"
                    android:textColor="@color/Text_Black"
                    android:textSize="@dimen/twelve_sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <RatingBar
                        android:id="@+id/ratingBarReviewParent"
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fivfteen_pixel"
                        android:numStars="@integer/num_five"
                        android:progressDrawable="@drawable/ratebar_theme"
                        android:stepSize="0.1" />

                    <TextView
                        android:id="@+id/tvheaderRatingReview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_pixel"
                        android:layout_toRightOf="@+id/ratingBar1"
                        android:text="@string/loan_exploree_review_rev"
                        android:textColor="@color/blue_lotus"
                        android:textSize="@dimen/twelve_sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ten_pixel"
            android:layout_marginLeft="@dimen/fivfteen_pixel"
            android:layout_marginTop="@dimen/fivfteen_pixel"
            android:text="@string/loan_explorer_review"
            android:textSize="@dimen/textsizedetails" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divider"
            android:contentDescription="@string/empty" />
    </LinearLayout>

</LinearLayout>